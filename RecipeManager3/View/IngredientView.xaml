<Window x:Class="RecipeManager3.View.IngredientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RecipeManager3.ViewModel"
        Title="Ingredient" SizeToContent="WidthAndHeight" Background="LightGray">
    <Window.DataContext>
        <vm:IngredientViewModel />
    </Window.DataContext>
    <StackPanel Margin="20">
        <TextBlock Margin="5">Add ingredient</TextBlock>
        <DockPanel Margin="20">
            <TextBlock DockPanel.Dock="Left" Margin="0, 0, 7, 0" VerticalAlignment="Center">Name:</TextBlock>
            <TextBox DockPanel.Dock="Right" Width="100" Text="{Binding Name}"></TextBox>
        </DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="60" Margin="0, 0, 7, 0" Command="{Binding Path=SaveCommand}" Click="CloseWindow">Save</Button>
            <Button Width="60" Click="CloseWindow">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
